<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 

    >

     <EditText
         android:id="@+id/txt_correoCapacitador"
         android:layout_width="match_parent"
         android:layout_height="83dp"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:background="#FAFAFA"
         android:ems="10"
         android:hint="Escriba aquÃ­ su mensaje"
         android:inputType="textMultiLine"
         android:textColor="#2E2E2E"
         android:textColorHint="#757575" >

         <requestFocus />
     </EditText>

     <Button
         android:id="@+id/btn_enviarMensaje"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/txt_correoCapacitador"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="74dp"
         android:background="@drawable/botonpulsado"
         android:text="Enviar Mensaje"
         android:textColor="#FFFFFF"
         android:textSize="19sp" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/txt_correoCapacitador"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="65dp"
         android:text="CONTENIDO DEL MENSAJE"
         android:textColor="#000000"
         android:textSize="25sp" />

</RelativeLayout>
