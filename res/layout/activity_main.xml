<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tesis.capacitysoft.MainActivity" >

<EditText
    android:id="@+id/txt_contrasenia"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:layout_above="@+id/btn_login"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="22dp"
    android:background="#FAFAFA"
    android:ems="10"
    
    android:hint="Contraseña"
    android:inputType="textPassword"
    android:textColor="#2E2E2E"
    android:textColorHint="#757575"
    android:drawableRight="@drawable/pass"
    tools:ignore="HardcodedText" />

<EditText
    android:id="@+id/txt_correoca"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:layout_above="@+id/txt_contrasenia"
    android:layout_alignLeft="@+id/txt_contrasenia"
    android:layout_alignRight="@+id/txt_contrasenia"
    android:background="#FAFAFA"
   
    android:ems="10"
    android:hint="Correo"
    android:inputType="textEmailAddress"
    android:textColor="#2E2E2E"
    android:textColorHint="#757575"
    tools:ignore="HardcodedText"
    android:drawableRight="@drawable/correo"
     >
	
    <requestFocus />

</EditText>

<Button
    android:id="@+id/btn_login"
    android:layout_width="200dp"
    android:layout_height="43dp"
    android:layout_alignLeft="@+id/txt_contrasenia"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/txt_contrasenia"
    android:layout_marginBottom="157dp"
    android:background="@drawable/botonpulsado"
    android:text="Iniciar Sesión"
    android:textColor="#FFFFFF"
    android:textSize="19sp"
    tools:ignore="HardcodedText" />

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="match_parent"
    android:layout_height="250sp"
    android:layout_above="@+id/txt_correoca"
    android:src="@drawable/inicio" />

<Button
    android:id="@+id/btn_recuperarCon"
    android:layout_width="163dp"
    android:layout_height="39dp"
    android:layout_alignTop="@+id/btn_login"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="82dp"
    android:background="@drawable/botonpulsado"
    android:text="Olvido Contraseña"
    android:textColor="#FFFFFF"
    android:textSize="14sp"
    tools:ignore="HardcodedText" />

</RelativeLayout>